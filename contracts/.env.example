# Digital Euro Contracts - Environment Configuration
# Copy this file to .env and fill in the values

# ============================================
# DEPLOYMENT KEYS
# ============================================

# Private key for contract deployment (NEVER commit real keys!)
# For lab: use a test key from `cast wallet new`
DEPLOYER_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80

# ============================================
# ROLE ADDRESSES
# ============================================

# Admin address - can manage all roles
# In production: ECB-controlled multisig
ADMIN_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# ECB Controller - can pause/unpause in emergencies
ECB_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# NCB Minter/Burner - can mint and burn tEUR
NCB_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# PSP Registrar - can register wallets
PSP_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# Oracle Service - can confirm conditional payment triggers
ORACLE_ADDRESS=0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266

# ============================================
# CONFIGURATION
# ============================================

# Enable waterfall (auto-sweep excess to bank)
ENABLE_WATERFALL=true

# ============================================
# RPC ENDPOINTS
# ============================================

# Lab environment (local kind cluster)
LAB_RPC_URL=http://localhost:8545

# Integration environment
INT_RPC_URL=https://besu-validator-rpc.ledger-int-ecb-core.svc.cluster.local:8545

# Staging environment
STG_RPC_URL=https://besu-validator-rpc.ledger-stg-ecb-core.svc.cluster.local:8545

# Production environment (NEVER auto-deploy to production)
PRD_RPC_URL=https://besu-validator-rpc.ledger-prd-ecb-core.csp.eu.int:8545

# ============================================
# CONTRACT VERIFICATION (optional)
# ============================================

# Etherscan API key (if using public EVM chains)
ETHERSCAN_API_KEY=
