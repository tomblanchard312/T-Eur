# =============================================================================
# tEUR API Gateway Configuration
# =============================================================================

# Server
PORT=3000
NODE_ENV=development
LOG_LEVEL=debug

# Blockchain Connection
# Lab environment - local Besu node
BLOCKCHAIN_RPC_URL=http://localhost:8545
BLOCKCHAIN_CHAIN_ID=31337

# Contract Addresses (deployed by Foundry scripts)
CONTRACT_PERMISSIONING=0x...
CONTRACT_WALLET_REGISTRY=0x...
CONTRACT_TOKENIZED_EURO=0x...
CONTRACT_CONDITIONAL_PAYMENTS=0x...

# Authentication
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
API_KEY_HEADER=X-API-Key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS
CORS_ORIGINS=http://localhost:3001,http://localhost:8080

# Operator Keys (for signing transactions)
# WARNING: In production, use HSM or secure key management
OPERATOR_PRIVATE_KEY=0x...

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_PATH=/health
