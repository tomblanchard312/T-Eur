{
  "$id": "https://example.com/schemas/ecb-manifest.schema.json",
  "title": "ECB Daily Manifest",
  "type": "object",
  "required": ["date", "created_at_utc", "entries", "manifest_hash"],
  "properties": {
    "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
    "created_at_utc": { "type": "string", "format": "date-time" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["series_id", "payload_hash", "retrieved_at_utc"],
        "properties": {
          "series_id": { "type": "string" },
          "payload_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" },
          "retrieved_at_utc": { "type": "string", "format": "date-time" }
        }
      }
    },
    "manifest_hash": { "type": "string", "pattern": "^[a-f0-9]{64}$" }
  }
}
