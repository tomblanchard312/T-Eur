FROM node:18-alpine AS builder

WORKDIR /app

COPY package*.json ./
RUN npm ci

COPY . .
RUN npm run build

FROM node:18-alpine

WORKDIR /app

COPY package*.json ./
RUN npm ci --production

COPY --from=builder /app/dist ./dist

# Create logs directory
RUN mkdir -p /app/logs

EXPOSE 4000

CMD ["node", "dist/index.js"]
